<h1>Listing raffles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Prize</th>
    <th>Start</th>
    <th>End</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @raffles.each do |raffle| %>
  <tr>
    <td><%= raffle.Name %></td>
    <td><%= raffle.Prize %></td>
    <td><%= raffle.Start %></td>
    <td><%= raffle.end %></td>
    <td><%= link_to 'Show', raffle %></td>
    <td><%= link_to 'Edit', edit_raffle_path(raffle) %></td>
    <td><%= link_to 'Destroy', raffle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

