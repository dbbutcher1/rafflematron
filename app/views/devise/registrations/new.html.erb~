<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "well span6 offset3 form-horizontal" }) do |f| %>
  <h2 class = "control">Sign up</h2>
  <%= devise_error_messages! %>

  <div class = "control-group"><%= f.label :email, :class => "control-label" %>
  <%= f.email_field :email, :autofocus => true, :class => "controls" %></div>

  <div class = "control-group"><%= f.label :password, :class => "control-label" %>
  <%= f.password_field :password, :class => "controls" %></div>

  <div class = "control-group"><%= f.label :password_confirmation, :class => "control-label" %>
  <%= f.password_field :password_confirmation, :class => "controls" %></div>

  <div class = "control-group"><%= f.submit "Sign up", :class => "control" %></div>

  <div class = "control"><%= render "devise/shared/links" %></div>
<% end %>

